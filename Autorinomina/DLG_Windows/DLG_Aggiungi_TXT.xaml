        <Label Content="Testo" Height="28" HorizontalAlignment="Left" Margin="9,9,0,0" Name="Label1" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="66,11,10,0" Name="TB_Testo" VerticalAlignment="Top" TabIndex="0" MaxLength="260" />
        <Button Content="Aggiungi" Height="25" HorizontalAlignment="Right" Margin="0,0,169,10" Name="BTN_Aggiungi" VerticalAlignment="Bottom" Width="121" IsDefault="True" TabIndex="1" Padding="0" />
        <Button Content="Annulla" Height="25" HorizontalAlignment="Right" Margin="0,0,10,10" Name="BTN_Annulla" VerticalAlignment="Bottom" Width="121" IsCancel="True" TabIndex="3" Padding="0" />
        <Button Content="+" Height="25" HorizontalAlignment="Right" Margin="0,0,138,10" Name="BTN_AggiungiNuovo" TabIndex="2" ToolTip="Aggiungi e nuovo" VerticalAlignment="Bottom" Width="31" Padding="0" />
    </Grid>
</Window>
